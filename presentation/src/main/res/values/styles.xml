<resources>

    <!--    BASE-->

    <style name="Button" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textAppearance">@style/Text</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="shapeAppearanceOverlay">@style/ButtonShapeAppearance</item>
    </style>

    <style name="ButtonShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!--    LIGHT-->

    <style name="Text" parent="android:Widget.Material.TextView">
        <item name="android:fontFamily">@font/jet_brains_mono</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BoldText" parent="Text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallText" parent="Text">
        <item name="android:textColor">@color/textColorTertiary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MediumText" parent="Text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LargeText" parent="BoldText">
        <item name="android:textSize">20sp</item>
    </style>

    <!--    DARK-->

    <style name="TextDark" parent="Text">
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="BoldTextDark" parent="TextDark">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallTextDark" parent="TextDark">
        <item name="android:textColor">@color/textColorTertiaryDark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MediumTextDark" parent="TextDark">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LargeTextDark" parent="BoldTextDark">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
